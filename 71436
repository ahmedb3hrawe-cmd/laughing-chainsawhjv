<script>
let points = localStorage.getItem("points") || 0;
points = parseInt(points);
document.getElementById("points").textContent = points;

function savePoints() {
    localStorage.setItem("points", points);
    document.getElementById("points").textContent = points;
}

function addPoints() {
    points += 10;
    savePoints();
